<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="Майне кляйне кальк!"
        android:textSize="30sp"
        />
    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_below="@id/text"
        android:enabled="false"
        android:lines="2"
        android:maxLines="2"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/buttonMultiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_below="@+id/editText"
        android:text="×"
        android:textSize="40sp"
        />

    <Button
        android:id="@+id/buttonDivision"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText"
        android:layout_toRightOf="@id/buttonMultiply"
        android:text="÷"
        android:textSize="40sp"
        />
    <Button
        android:id="@+id/buttonPlus"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText"
        android:layout_toRightOf="@id/buttonDivision"
        android:text="+"
        android:textSize="40sp"
        />
    <Button
        android:id="@+id/buttonMinus"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText"
        android:layout_toRightOf="@id/buttonPlus"
        android:text="-"
        android:textSize="40sp"
        />
    <Button
        android:id="@+id/buttonSeven"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonMultiply"
        android:text="7"
        android:layout_margin="15sp"
        android:textSize="@dimen/textSize"
        />
    <Button
        android:id="@+id/buttonEight"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonMultiply"
        android:layout_toRightOf="@+id/buttonSeven"
        android:text="8"
        android:layout_margin="15sp"
        android:textSize="@dimen/textSize"
        />
    <Button
        android:id="@+id/buttonNine"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonMultiply"
        android:layout_toRightOf="@+id/buttonEight"
        android:text="9"
        android:layout_margin="15sp"
        android:textSize="@dimen/textSize"
        />

    <Button
        android:id="@+id/buttonFour"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonSeven"
        android:layout_margin="15sp"
        android:text="4"
        android:textSize="@dimen/textSize"
        />
    <Button
        android:id="@+id/buttonFive"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonSeven"
        android:layout_margin="15sp"
        android:layout_toRightOf="@id/buttonFour"
        android:text="5"
        android:textSize="@dimen/textSize"
        />
    <Button
        android:id="@+id/buttonSix"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonNine"
        android:layout_margin="15sp"
        android:layout_toRightOf="@id/buttonFive"
        android:text="6"
        android:textSize="@dimen/textSize"
        />

    <Button
        android:id="@+id/buttonOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_below="@+id/buttonFour"
        android:layout_margin="15sp"
        android:text="1"
        android:textSize="@dimen/textSize"
        />
    <Button
        android:id="@+id/buttonTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_below="@+id/buttonFive"
        android:layout_margin="15sp"
        android:layout_toRightOf="@+id/buttonOne"
        android:text="2"
        android:textSize="@dimen/textSize"
        />
    <Button
        android:id="@+id/buttonThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_below="@+id/buttonSix"
        android:layout_margin="15sp"
        android:layout_toRightOf="@+id/buttonTwo"
        android:text="3"
        android:textSize="@dimen/textSize"
        />
    <Button
        android:id="@+id/buttonDot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_below="@+id/buttonSix"
        android:layout_margin="15sp"
        android:layout_toRightOf="@+id/buttonThree"
        android:text="."
        android:textSize="@dimen/textSize"
        />
    <Button
        android:id="@+id/buttonZero"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_below="@+id/buttonOne"
        android:layout_margin="15sp"
        android:text="0"
        android:textSize="@dimen/textSize"
        />
    <Button
        android:id="@+id/buttonEquals"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonDot"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/buttonZero"
        android:text="="
        android:textSize="40sp" />




</RelativeLayout>